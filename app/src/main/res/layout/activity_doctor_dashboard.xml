<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorDashboardActivity"
    android:layout_margin="15dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/iron"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="210dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/docimage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor ID :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_doctorID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_doctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Ajinkya Thakare"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emgergency No.:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="6692309354"
                    tools:text="@tools:sample/us_phones" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_hospitalAddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="899 Morrison Park Dr, San Jose, California, USA" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_addPatient"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Add Patient"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/btn_viewPatient"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="View Patient"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/btn_approvePatient"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Approve Patient"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/btn_addMedicine"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Prescribe Medicine"
            android:elevation="10dp"/>

    </LinearLayout>


</LinearLayout>